---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="For Everyone AI | feai.io">
    <!-- Section 1: Hero -->
    <section class="bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto w-full px-8 lg:px-16 py-20 lg:py-28">
            <div
                class="flex flex-col lg:flex-row gap-12 lg:gap-40 items-center justify-center"
            >
                <!-- Left Content -->
                <div class="space-y-6 animate-on-scroll">
                    <!-- Logo -->
                    <div class="max-w-[160px] max-h-[130px] overflow-hidden -mb-4 -ml-4">
                        <img
                            src="/feai_logo/IMG_9102.PNG"
                            alt="For Everyone AI Logo"
                            class="w-full h-full object-contain object-left-top"
                            style="margin: 0; padding: 0; display: block; line-height: 0; vertical-align: top;"
                        />
                    </div>

                    <!-- Headline -->
                    <h1
                        class="text-4xl md:text-5xl font-bold leading-tight text-gray-900 tracking-tight -mt-4"
                    >
                        Smart AI Solutions<br />Built for Everyone
                    </h1>

                    <!-- Subtext -->
                    <p class="text-base text-gray-500 max-w-sm leading-relaxed">
                        We bring intelligent automation to businesses of all
                        sizes. Simple setup and powerful results. That is what <strong
                            >For Everyone AI</strong
                        > promise.
                    </p>

                    <!-- Buttons -->
                    <div class="flex flex-wrap gap-3 pt-2">
                        <a
                            href="#what-we-do"
                            class="inline-flex items-center justify-center px-6 py-2.5 bg-gray-900 text-white text-sm font-medium rounded-full hover:bg-gray-800 transition-colors duration-200"
                        >
                            Learn More
                        </a>
                        <a
                            href="#demo"
                            class="inline-flex items-center justify-center px-6 py-2.5 bg-white text-gray-900 text-sm font-medium rounded-full border border-gray-300 hover:border-gray-400 transition-colors duration-200"
                        >
                            Request for Demo
                        </a>
                    </div>
                </div>

                <!-- Right Image -->
                <div
                    class="relative flex justify-center lg:justify-end animate-on-scroll stagger-2"
                >
                    <img
                        src="/images/hero-ai-robot-removebg-preview.png"
                        alt="AI Robot Assistant"
                        class="w-72 sm:w-80 lg:w-96 h-auto object-contain"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Section 2: What We Do -->
    <section id="what-we-do" class="py-20 lg:py-24 bg-gray-50 overflow-hidden">
        <div class="max-w-7xl mx-auto px-8 lg:px-16">
            <div
                class="flex flex-col lg:flex-row-reverse gap-12 lg:gap-40 items-center justify-center"
            >
                <!-- Right Content (now on right due to flex-row-reverse) -->
                <div class="space-y-5 animate-on-scroll lg:max-w-lg">
                    <!-- Section Label -->
                    <span class="text-blue-500 text-sm font-medium"
                        >What We Do</span
                    >

                    <!-- Headline -->
                    <h2
                        class="text-3xl md:text-4xl font-bold leading-tight text-gray-900 tracking-tight"
                    >
                        AI That Works<br />For Your Business
                    </h2>

                    <!-- Subtext -->
                    <p class="text-gray-500 text-sm leading-relaxed max-w-md">
                        From customer conversations to appointment scheduling
                        and sales follow-ups. We handle it all so you can focus
                        on growth.
                    </p>

                    <!-- Feature Badges (2x2 grid, same size) -->
                    <div class="grid grid-cols-2 max-md:grid-cols-1 gap-3 pt-4">
                        <!-- Consultation -->
                        <div
                            class="flex items-center gap-3 bg-white px-4 py-3 rounded-xl shadow-md border border-gray-100 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 w-full"
                        >
                            <div
                                class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-lg flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-5 h-5 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="font-semibold text-gray-800 text-sm"
                                >Consultation</span
                            >
                        </div>
                        <!-- AI Training -->
                        <div
                            class="flex items-center gap-3 bg-white px-4 py-3 rounded-xl shadow-md border border-gray-100 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 w-full"
                        >
                            <div
                                class="w-10 h-10 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-lg flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-5 h-5 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="font-semibold text-gray-800 text-sm"
                                >AI Training</span
                            >
                        </div>
                        <!-- Ongoing Support -->
                        <div
                            class="flex items-center gap-3 bg-white px-4 py-3 rounded-xl shadow-md border border-gray-100 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 w-full"
                        >
                            <div
                                class="w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-5 h-5 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="font-semibold text-gray-800 text-sm"
                                >24/7 Support</span
                            >
                        </div>
                        <!-- Custom Solutions -->
                        <div
                            class="flex items-center gap-3 bg-white px-4 py-3 rounded-xl shadow-md border border-gray-100 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 w-full"
                        >
                            <div
                                class="w-10 h-10 bg-gradient-to-br from-orange-500 to-amber-600 rounded-lg flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    class="w-5 h-5 text-white"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="font-semibold text-gray-800 text-sm"
                                >Custom Setup</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Left Image (clean, no effects) -->
                <div
                    class="relative flex justify-center animate-on-scroll stagger-2"
                >
                    <img
                        src="/images/ai-automation.png"
                        alt="AI Automation"
                        class="w-64 sm:w-72 lg:w-96 h-auto object-contain rounded-2xl shadow-2xl"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Section 3: Why Choose Us + Team -->
    <section id="why-choose-us" class="py-20 lg:py-40 bg-white overflow-hidden">
        <div class="max-w-5xl mx-auto px-8 lg:px-16">
            <div
                class="flex flex-col lg:flex-row gap-12 lg:gap-40 items-center justify-center"
            >
                <!-- Left Content -->
                <div class="space-y-5 animate-on-scroll">
                    <!-- Section Label -->
                    <span class="text-blue-500 text-sm font-medium"
                        >The FEAI Difference</span
                    >

                    <!-- Headline -->
                    <h2
                        class="text-3xl md:text-4xl font-bold leading-tight text-gray-900 tracking-tight"
                    >
                        Your AI Partner<br />From Start to Success
                    </h2>

                    <!-- Subtext -->
                    <p class="text-gray-500 text-sm leading-relaxed max-w-md">
                        We do not just give you tools. We build, configure, and
                        manage your entire AI system. Tailored to your business
                        needs with ongoing optimization by our dedicated team.
                    </p>

                    <!-- Button -->
                    <div class="pt-2">
                        <a
                            href="#contact"
                            class="inline-flex items-center justify-center px-6 py-3 bg-gray-900 text-white text-sm font-medium rounded-full hover:bg-gray-800 transition-colors duration-200"
                        >
                            Schedule a Free Consultation
                        </a>
                    </div>
                </div>

                <!-- Right Image - transparent, no frame -->
                <div
                    class="relative flex justify-center lg:justify-end animate-on-scroll stagger-2"
                >
                    <img
                        src="/images/ai-globe-removebg-preview.png"
                        alt="AI Globe"
                        class="w-64 h-64 lg:w-80 lg:h-80 object-contain"
                    />
                </div>
            </div>

            <!-- Team Members - Same Section -->
            <div
                class="grid grid-cols-1 xl:grid-cols-3 gap-6 xl:gap-8 mt-16 pt-16 border-t border-gray-100"
            >
                <!-- Team Member 1: Cardee Chang -->
                <div class="flex flex-col items-center xl:items-start">
                    <div class="relative flex-shrink-0 mb-4">
                        <div
                            class="w-40 aspect-[3/4] bg-gradient-to-br from-indigo-100 to-purple-100 rounded-2xl flex items-center justify-center border-2 border-indigo-200 overflow-hidden shadow-sm"
                        >
                            <span class="text-2xl font-bold text-indigo-600">CC</span>
                        </div>
                    </div>
                    <div class="text-center xl:text-left">
                        <h3 class="font-bold text-gray-900 text-lg mb-1">Cardee Chang</h3>
                        <p class="text-gray-500 text-sm mb-3">Founder & CEO</p>
                        <div class="text-gray-600 text-xs leading-relaxed space-y-1.5">
                            <p class="font-semibold text-gray-700">8 years' experience in AI & Automation</p>
                            <p>Hands-on practitioner applying AI to Sales & Marketing</p>
                        </div>
                    </div>
                </div>

                <!-- Team Member 2: Michael Jau -->
                <div class="flex flex-col items-center xl:items-start">
                    <div class="relative flex-shrink-0 mb-4">
                        <!-- Portrait avatar -->
                        <div
                            class="w-40 aspect-[3/4] bg-gradient-to-br from-amber-50 via-white to-amber-100 rounded-2xl border-2 border-amber-200 overflow-hidden shadow-sm"
                        >
                            <img
                                src="/team_images/Michael_Jau.jpg"
                                alt="Portrait of Michael Jau"
                                class="w-full h-full object-cover object-center"
                            />
                        </div>
                    </div>
                    <div class="text-center xl:text-left">
                        <h3 class="font-bold text-gray-900 text-lg mb-1">Michael Jau</h3>
                        <p class="text-gray-500 text-sm mb-3">
                            Co-Founder & Chief Operations Officer
                        </p>
                        <div class="text-gray-600 text-xs leading-relaxed space-y-1.5">
                            <p class="font-semibold text-gray-700">15 years' experience in Financial Services</p>
                            <p>Led the first Insurance Agency & Mortgage Advisory to apply AI in standardized SOPs and Client CRM</p>
                        </div>
                    </div>
                </div>

                <!-- Team Member 3: Levine Tsai -->
                <div class="flex flex-col items-center xl:items-start">
                    <div class="relative flex-shrink-0 mb-4">
                        <div
                            class="w-40 aspect-[3/4] bg-gradient-to-br from-blue-100 to-cyan-100 rounded-2xl flex items-center justify-center border-2 border-blue-200 overflow-hidden shadow-sm"
                        >
                            <span class="text-2xl font-bold text-blue-600">LT</span>
                        </div>
                    </div>
                    <div class="text-center xl:text-left">
                        <h3 class="font-bold text-gray-900 text-lg mb-1">Levine Tsai</h3>
                        <p class="text-gray-500 text-sm mb-3">
                            Head of Technology Operations
                        </p>
                        <div class="text-gray-600 text-xs leading-relaxed space-y-1.5">
                            <p class="font-semibold text-gray-700">10 years' experience in Tech Operations</p>
                            <p>Chatbot Architecture Specialist</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 4: What Our AI Can Do -->
    <section
        id="what-ai-can-do"
        class="py-20 lg:py-24 bg-gray-50 overflow-hidden"
    >
        <div class="max-w-5xl mx-auto px-8 lg:px-16">
            <!-- Section Header -->
            <div class="mb-12 animate-on-scroll space-y-5">
                <span class="text-blue-500 text-sm font-medium"
                    >AI Capabilities</span
                >

                <h2
                    class="text-3xl md:text-4xl font-bold leading-tight text-gray-900 tracking-tight"
                >
                    For Everyone AI Core Capabilities
                </h2>

                <p
                    class="text-gray-500 text-sm leading-relaxed lg:whitespace-nowrap"
                >
                    From smart conversations to seamless scheduling. Our AI
                    handles the heavy lifting across every customer touchpoint.
                </p>
            </div>

            <!-- Capability Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Smart Customer Service -->
                <div
                    class="bg-white rounded-2xl p-6 text-center animate-on-scroll stagger-1 hover:shadow-lg transition-shadow duration-300 h-full flex flex-col"
                >
                    <div
                        class="w-12 h-12 mx-auto mb-4 bg-blue-100 rounded-xl flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-blue-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                            ></path>
                        </svg>
                    </div>
                    <h3
                        class="font-semibold text-gray-900 text-sm mb-2 min-h-[2.5rem] flex items-center justify-center"
                    >
                        Smart Customer Service
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed mt-auto">
                        24/7 instant replies in any language
                    </p>
                </div>

                <!-- AI Sales Assistant -->
                <div
                    class="bg-white rounded-2xl p-6 text-center animate-on-scroll stagger-2 hover:shadow-lg transition-shadow duration-300 h-full flex flex-col"
                >
                    <div
                        class="w-12 h-12 mx-auto mb-4 bg-purple-100 rounded-xl flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-purple-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                            ></path>
                        </svg>
                    </div>
                    <h3
                        class="font-semibold text-gray-900 text-sm mb-2 min-h-[2.5rem] flex items-center justify-center"
                    >
                        AI Sales Assistant
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed mt-auto">
                        Smart recommendations and lead qualification
                    </p>
                </div>

                <!-- Appointment Scheduling -->
                <div
                    class="bg-white rounded-2xl p-6 text-center animate-on-scroll stagger-3 hover:shadow-lg transition-shadow duration-300 h-full flex flex-col"
                >
                    <div
                        class="w-12 h-12 mx-auto mb-4 bg-green-100 rounded-xl flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-green-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </div>
                    <h3
                        class="font-semibold text-gray-900 text-sm mb-2 min-h-[2.5rem] flex items-center justify-center"
                    >
                        Appointment Scheduling
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed mt-auto">
                        Syncs with Google Calendar automatically
                    </p>
                </div>

                <!-- Marketing Assistant -->
                <div
                    class="bg-white rounded-2xl p-6 text-center animate-on-scroll stagger-4 hover:shadow-lg transition-shadow duration-300 h-full flex flex-col"
                >
                    <div
                        class="w-12 h-12 mx-auto mb-4 bg-amber-100 rounded-xl flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-amber-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"
                            ></path>
                        </svg>
                    </div>
                    <h3
                        class="font-semibold text-gray-900 text-sm mb-2 min-h-[2.5rem] flex items-center justify-center"
                    >
                        Marketing Assistant
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed mt-auto">
                        Follow-ups, upsells, and cross-sells
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section 5: How Are We Different -->
    <section id="how-different" class="py-20 lg:py-24 bg-white overflow-hidden">
        <div class="max-w-5xl mx-auto px-8 lg:px-16">
            <!-- Header Row -->
            <div
                class="flex flex-col lg:flex-row gap-12 lg:gap-20 items-center mb-16"
            >
                <!-- Left Content -->
                <div class="space-y-5 animate-on-scroll lg:max-w-md">
                    <span class="text-blue-500 text-sm font-medium"
                        >What Sets Us Apart</span
                    >
                    <h2
                        class="text-3xl md:text-4xl font-bold leading-tight text-gray-900 tracking-tight"
                    >
                        Built Around Your Business
                    </h2>
                    <p class="text-gray-500 text-sm leading-relaxed">
                        At For Everyone AI, we architect intelligent systems
                        around your unique business flow. Our approach blends
                        adaptability, structured automation, and natural
                        conversation to turn every interaction into an
                        opportunity.
                    </p>
                </div>

                <!-- Right Image -->
                <div
                    class="relative flex justify-center animate-on-scroll stagger-2"
                >
                    <img
                        src="/images/ai-dashboard-removebg-preview.png"
                        alt="AI Dashboard"
                        class="w-72 sm:w-80 lg:w-[28rem] h-72 object-contain"
                    />
                </div>
            </div>

            <!-- USP Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- USP #1 -->
                <div class="bg-gray-50 rounded-2xl p-6 flex flex-col h-full">
                    <h3 class="font-bold text-gray-900 mb-2">
                        Contextual Memory
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed flex-1">
                        Your AI remembers past conversations to personalize
                        every reply and follow-up with your clients.
                    </p>
                    <!-- <div
                        class="mt-4 h-52 rounded-xl overflow-hidden bg-gradient-to-br from-indigo-50 to-purple-50 flex items-center justify-center"
                    >
                        <img
                            src="/images/ai-chip-brain.png"
                            alt="Contextual Memory"
                            class="w-full h-full object-contain p-2"
                        />
                    </div> -->
                </div>

                <!-- USP #2 -->
                <div class="bg-gray-50 rounded-2xl p-6 flex flex-col h-full">
                    <h3 class="font-bold text-gray-900 mb-2">
                        Smart Chat Flow
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed flex-1">
                        A structured yet flexible AI conversation flow designed
                        to guide customers and convert sales.
                    </p>
                    <!-- <div
                        class="mt-4 h-52 rounded-xl overflow-hidden bg-gradient-to-br from-blue-50 to-cyan-50 flex items-center justify-center"
                    >
                        <img
                            src="/images/ai-chat-flow.png"
                            alt="AI Chat Flow"
                            class="w-full h-full object-contain p-2"
                        />
                    </div> -->
                </div>

                <!-- USP #3 -->
                <div class="bg-gray-50 rounded-2xl p-6 flex flex-col h-full">
                    <h3 class="font-bold text-gray-900 mb-2">
                        Lead Re-Engagement
                    </h3>
                    <p class="text-gray-500 text-xs leading-relaxed flex-1">
                        Seamlessly reconnect with leads via automated WhatsApp
                        broadcasts and follow-ups.
                    </p>
                    <!-- <div
                        class="mt-4 h-52 rounded-xl overflow-hidden bg-gradient-to-br from-amber-50 to-orange-50 flex items-center justify-center"
                    >
                        <img
                            src="/images/lead-engagement.png"
                            alt="Lead Engagement"
                            class="w-full h-full object-contain p-2"
                        />
                    </div> -->
                </div>
            </div>
        </div>
    </section>

    <!-- Section 9: Quote / CTA -->
    <section class="py-32 bg-gray-900 relative overflow-hidden">
        <!-- Background Gradient/Image Placeholder -->
        <div
            class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 opacity-90 z-10"
        >
        </div>
        <!-- Placeholder pattern/image div -->
        <div
            class="absolute inset-0 bg-[linear-gradient(45deg,transparent_25%,rgba(68,68,68,.2)_50%,transparent_75%,transparent_100%)] bg-[length:20px_20px] opacity-20"
        >
        </div>

        <div
            class="relative z-20 max-w-5xl mx-auto px-8 text-center animate-on-scroll"
        >
